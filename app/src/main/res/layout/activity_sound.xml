<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhsm0034.fntj0052.hvac.SoundActivity">

    <TextView
        android:id="@+id/textSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Sound"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level:"
        android:textSize="18sp"
        android:layout_above="@+id/tv_TextSound"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_TextSound"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Result"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/buttonGetSound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonGetSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getJSON"
        android:text="Get"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/buttonBack"
        android:layout_toLeftOf="@+id/buttonBack"
        android:layout_toStartOf="@+id/buttonBack"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="back"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonParse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonGetSound"
        android:layout_toEndOf="@+id/buttonBack"
        android:layout_toRightOf="@+id/buttonBack"
        android:onClick="parseJSON"
        android:text="Parse" />


</RelativeLayout>
